<Window x:Class="WPF.UI.View.ShellContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShellContainer" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" x:Name="menuRegion"/>
        <StackPanel DockPanel.Dock="Top" x:Name="toolBarRegion" Orientation="Vertical"/>
        <StackPanel DockPanel.Dock="Bottom" x:Name="statusBarRegion" Orientation="Vertical"/>
        <Grid DockPanel.Dock="Left" >
            <TabControl x:Name="leftRegion" TabStripPlacement="Bottom"/>
        </Grid>
        <Grid DockPanel.Dock="Right" >
            <TabControl x:Name="rightRegion" TabStripPlacement="Bottom"/>
        </Grid>
        <Grid x:Name="centerRegion"/>
    </DockPanel>
</Window>
